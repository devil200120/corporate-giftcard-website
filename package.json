{
  "name": "corporate-gifting-platform",
  "version": "1.0.0",
  "description": "A comprehensive corporate gifting platform built with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix frontend",
    "install-client": "npm install --prefix frontend",
    "install-server": "npm install --prefix backend",
    "install-all": "npm install && npm run install-client && npm run install-server"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["corporate gifting", "ecommerce", "MERN", "react", "nodejs", "mongodb"],
  "author": "Corporate Gifting Team",
  "license": "MIT"
}